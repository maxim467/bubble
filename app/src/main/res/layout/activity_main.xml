<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:textSize="70dp"
        android:layout_marginTop="50dp"
        android:text="@string/app_name" />

    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="@string/jugar"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:textColor="#ffff0500"
        android:onClick="lanzarJuego"
        android:background="#dd8a8a87" />

    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:text="@string/configurar"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:layout_marginTop="10dp"
        android:textColor="#ff0002ff"
        android:onClick="lanzarPreferencias"
        android:background="#dd8a8a87" />

    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:text="@string/acerca_de"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:id="@+id/button3"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="false"
        android:textColor="#fffffd07"
        android:background="#dd8a8a87"
        android:onClick="lanzarAcercaDe" />

    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:text="@string/salir"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:id="@+id/button4"
        android:layout_marginTop="10dp"
        android:textColor="#ff39ae04"
        android:background="#dd8a8a87"
        android:onClick="lanzarAyuda" />

</LinearLayout>